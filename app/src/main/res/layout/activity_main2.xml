<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="열심히 알바해서 아이패드 샀어"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        >
    </TextView>
    <Button
        android:id="@+id/answer1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고생많았어 축하해"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/question1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answer1_2"
        android:layout_marginTop="100dp"
        >
    </Button>
    <Button
        android:id="@+id/answer1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이패드 뭐 산거야?"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/question1"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer1_1"
        >
    </Button>






</androidx.constraintlayout.widget.ConstraintLayout>