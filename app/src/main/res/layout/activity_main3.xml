<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나 사고 났어"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        >
    </TextView>
    <Button
        android:id="@+id/answer2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진짜? 다친 데는 없고? 괜찮아?"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/question2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answer2_2"
        android:layout_marginTop="100dp"
        >
    </Button>
    <Button
        android:id="@+id/answer2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보험은 들었어? 사고 보장은 돼?"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/question2"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answer2_1"
        >
    </Button>






</androidx.constraintlayout.widget.ConstraintLayout>